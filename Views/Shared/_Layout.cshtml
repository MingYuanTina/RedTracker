<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SurgiNeer</title>

    <environment names="Development">
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
        <link rel="stylesheet" href="~/css/site.css" />
        <link rel="stylesheet" href="~/css/css_b4.css" />
    </environment>
    <environment names="Staging,Production">
        <link rel="stylesheet" href="https://ajax.aspnetcdn.com/ajax/bootstrap/3.3.6/css/bootstrap.min.css"
              asp-fallback-href="~/lib/bootstrap/dist/css/bootstrap.min.css"
              asp-fallback-test-class="sr-only" asp-fallback-test-property="position" asp-fallback-test-value="absolute" />
        <link rel="stylesheet" href="~/css/site.min.css" asp-append-version="true" />
    </environment>
    @Html.ApplicationInsightsJavaScript(TelemetryConfiguration)
</head>

<style>
    .header-font        { color:#fff; font-size:16px; font-weight:bold; font-family:Arial, sans-serif; }
    .header             { background-color:#c02026; height:60px; padding-left:5%; padding-right:5%; overflow-x:visible; }
    .nav_head           { padding-top:20px; }
    .sub_header         { background-color:#c02026; height:125px; padding-left:5%; padding-right:5%; overflow-x:visible; position:absolute; }
    .sub_list > li > a  { padding-top:0px; padding-bottom:0px; color:#fff; position:relative; }
    .nav > li > a       { position:relative; display:block; padding:0px 25px 0px 25px; }
    .sub_header         { visibility:hidden; }
</style>
<body>
    <div class="container body-content">
        @* ----------------------------- The following section of code is top head ----------------------------- *@

        @* ------------------------------ The follow section of code is menu bar ------------------------------- *@
        <div class="navbar" style="margin-bottom:0px;">
            @*<div class="navbar-header navbar-inverse">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>*@
            <div class="header">
                <ul class="nav navbar-nav nav_head">
                    <li><a class="header-font" asp-controller="Home" asp-action="Index">Home</a></li>
                    <li><a class="header-font" asp-controller="Career" asp-action="Index">User Information</a></li>
                </ul>
            </div>
        </div>
       
        @* ----------------------------- The following section is to render each page's content -------------------------- *@
        <div>
            @RenderBody()
        </div>

        @* ----------------------------- The following section is the footer -------------------------- *@
        <div>
            <hr />
            <footer>
                <div class="col-md-6">
                    <img class="s0"  src="~/images/footer.jpg" />
                </div>
                <div class="col-md-6" style="float:right">
                    <a href="http://www.surgineer.com.cn/">
                       <strong style="font-size:14px">Ministry of Health and Family</strong>
                    </a>
                    <br />
                    Copyright © 2016
                    <br />
                    Phone:010-9999 9999 Fax:010-9999 99999 
                    <br />
                    E-mail:<a href="mailto:bjhfst@163.com">abcdefg@internationalplanet.com</a>
                    <br />
                </div>
            </footer>
        </div>
    </div>

    <environment names="Development">
        <script src="~/lib/jquery/dist/jquery.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
    </environment>
    <environment names="Staging,Production">
        <script src="https://ajax.aspnetcdn.com/ajax/jquery/jquery-2.2.0.min.js"
                asp-fallback-src="~/lib/jquery/dist/jquery.min.js"
                asp-fallback-test="window.jQuery">
        </script>
        <script src="https://ajax.aspnetcdn.com/ajax/bootstrap/3.3.6/bootstrap.min.js"
                asp-fallback-src="~/lib/bootstrap/dist/js/bootstrap.min.js"
                asp-fallback-test="window.jQuery && window.jQuery.fn && window.jQuery.fn.modal">
        </script>
        <script src="~/js/site.min.js" asp-append-version="true"></script>
    </environment>

    @RenderSection("scripts", required: false)
</body>
</html>
